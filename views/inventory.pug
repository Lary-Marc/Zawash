
extends layout

block content
    body(style="background:rgb(6, 10, 19);")
         div.row.justify-content-center
            div.col-md-6
                div.card-body
                    if alert =='success'
                        div.alert.alert-success Washer added successfully
                    if alert =='error'
                        div.alert.alert-danger An error occured, failed to add washer
                    header.card-header(style="background:blue;")
                        h4.card-title(style="color:white;") Cost Monitor 
                    form(method="POST" action='/inventory')
                        div.form.offset-md-3(style="padding-top:20px;")
                            div.form-row(style="padding:5px 60px 0 10px;")
                                div.col.form-group
                                    h5(style="padding-bottom:5px;color:white;") Expense 
                                    select(name="item" id="item"  style="width:92%; border:4px solid black;")  
                                        option(value="none" selected disabled hidden)   
                                        option Electricity Bill
                                        option Water Bill
                                        option Detergent
                                        option Maintenance
                                        option New machine
                                        option Scrubbing brush/Towel

                            div.form-row(style="padding:0px 10px;")
                                h5(style="padding-bottom:5px; color:white;") Price
                                div.input-group.form-field
                                    
                                    span.input-group-text#basic-addon1(style="color: blanchedalmond; background-color: rgb(0, 0, 0); margin-top: -10px; width: 50px; height: 38px; border-radius: 5px; border: 1px;") UGX
                                    input(name="price" type="number" id="price"
                                        aria-label="" aria-describedby="basic-addon1"
                                        style="width: 70%; border-radius: 5px; height: 38px; border:4px solid black;")
                                    div
                                        small(style="color: red;")
                            div.form-row(style="padding:5px 60px 0 10px;")
                                div.col.form-group
                                    h5(style="padding-bottom:5px;color:white;") Date
                                    input.form-control(name="date" id="date" type="date" style="width:92%; border:4px solid black;")
                            
                            div.offset-md-3
                                button.btn.btn-primary.btn-lg(type="submit" style="width=:250px;") Submit