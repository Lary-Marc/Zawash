                                div.row.px-3.mb-4
                                    div.line
                                    small.or.text-center Or
                                    div.line
                                
                                div.row.px-3.form-field
                                    small(style="color: red;")
                                    input.mb-4(type="text" name="email" id="email" placeholder="Enter a valid email or Username")

                                
                                div.row.px-3.form-field
                                    small(style="color: red;")
                                    input(type="password" name="password" placeholder="Enter password" id="password")

                                div.g-3.align-items-left
                                    div.mb-3
                                        div.form-check
                                            input(class="form-check-input" type="checkbox" value="" id="flexCheckDefault"
                                            style="box-shadow:none; width:35px;")
                                            h6(class="form-check-label" for="flexCheckDefault" style="padding-left:20px;") Remember me
                                                    
                                    div.col-auto
                                        span(id="passwordHelpInline" class="form-text")
                                            a(href="" style="float: right; margin-top: -40px ; color: Black;") Forgot Password?
                                                                        

                                div.row.mb-3.px-3
                                    input.btn.btn-danger(type="submit" value="Log In")
                            
            div.bg.py-4(style="width: 52.5%; margin: 0 -20px 10px -20px; border-radius: 7px; margin-left: 70px; float:left;")
