extends layout

block content
    body(class="body" style="background-color: rgb(255, 61, 61);")
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
                a.navbar-brand(href='/dashboard') CarWash
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', 
                aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon

                .collapse.navbar-collapse(id='navbarSupportedContent')
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='/index') Home
                        
                    ul.navbar-nav.float-right
                        li.nav-item
                            a.nav-link(href='/registration') Register
                        li.nav-item
                            a.nav-link(href='/login') LogIn

        div.container-fluid.px-1.px-md-5.px-lg-1.px-xl-5.py-5.mx-auto(style="background-color:rgb(255, 61, 61) ; height: auto;")
            form.form#signup(method="POST" action='/login')
                div.card.card0.border-0(style="background-color: rgb(255, 61, 61);")
                    div.row.flex(style="display:flex;")
                        div.col-lg-5#row_d(style="background-color: rgb(255, 61, 61); padding: 140px 10px 20px 0; order: 2;")
                            div.card1.pb-5(style=" height: 200px; background-color: rgb(216, 112, 112);")
                                div(style="padding-top: 30px;")
                                    h4(style="text-align: center; margin-top: 20px;") Don't have an account?
                                    center
                                        a.btn.btn-light(href="/signup" role="button" style="width: 100px;") SignUp
                                
                        div.col-lg-5(style="background-color:rgb(255, 61, 61) ; margin: 10px -10px 0px 70px; order: 1; height: auto;")
                            div.card2.card.border-0.px-4.py-5(style="height: 500px; margin: 0;")
                                h1(style="color: black;") ZaWash Washing Bay
                                div.mb-4.px-3(style="display: flex; margin-bottom: 10px;")

                                    h6(style="padding-top: 20px;") Sign in with
                                    
