extends layout

block content
    body.body
                    
                            
        div.section
                    
            div.row.justify-content-center
                div.col-md-6#outer-div
                    div.card-body
                        if alert =='success'
                            div.alert.alert-success Vehicle information added successfully
                        if alert =='error'
                            div.alert.alert-danger An error occured, failed to add information 
                        header.card-header
                            h1.card-title ZaWash Washing Bay
                            h4.card-title Registration For Car Wash 
                        form(method="POST" action='/cartracking' id="register" name="register")
                            div.form-row
                                div.col.form-group
                                    label
                                    input(name="fullName" placeholder="Enter customer name" id="username")
                                    small(style="color:red;")
                                div.col.form-group
                                    label
                                    input(name="phone" placeholder="Customer telephone number" id="phone")
                                    small    
                            div.form-row 
                                div.col.input-group.form-group(style="padding-bottom: 10px; padding-top: 5px;")
                                    span.input-group-text#basic-addon1(style="color: blanchedalmond; background-color: rgb(0, 0, 0); margin-top: -10px; width: 50px; height: 38px; border-radius: 5px; border: 1px;") UGX
                                    select(name="payment" id="payment" style="width: 83.5%; border-radius: 5px; height: 39px; border-radius:8px;")  
                                        option(value="none" selected disabled hidden) Packages    
                                        option 10000
                                        option 15000
                                        option 20000
                                        option 5000
                                    small(style="color: red;")  
                                div.col.form-group
                                    label
                                    select(name="vehicle" id="vehicle")  
                                        option(value="none" selected disabled hidden) To be Washed    
                                        option Small Car
                                        option Medium Car
                                        option Truck
                                        option MotorCycle
                                        option Engine
                                        option Full Wash
                                    small(style="color:red;")
                            div.form-row
                                div.col.form-group
                                    
                                    input(type="text" name="date" id="date" placeholder="Today's Date" onfocus="(this.type='date')")
                                    small(style="color:red;")
                                div.col.form-group
                                    
                                    input(name="time" placeholder="Time of Arrival" id="time" onfocus="(this.type='time')")
                                    small(style="color:red;")
                            div.form-row
                                div.col.form-group
                                    label
                                    input(name="numberPlate" placeholder="Number Plate/Engine number" id="numberPlate")
                                    small(style="color:red;")
                                div.col.form-group
                                    label
                                    input(name="carModel" placeholder="Enter Car Model")
                                    small
                            div.form-row
                                div.col.form-group
                                    label
                                    select(name="washer" id="washer")  
                                        each washer in washers
                                            option(value="none" selected disabled hidden) Washer    
                                            option(value=washer._id) #{washer.username}
                                    small(style="color:red;")

                                div.col.input-group.form-group(style="padding-bottom: 10px; padding-top: 5px;")
                                    span.input-group-text#basic-addon1(style="color: blanchedalmond; background-color: rgb(0, 0, 0); margin-top: -10px; width: 50px; height: 38px; border-radius: 5px; border: 1px;") UGX
                                    select(name="wage" id="wage" style="width: 83.5%; border-radius: 5px; height: 39px; border-radius:8px;")  
                                        option(value="none" selected disabled hidden) Wages    
                                        option 4000
                                        option 3000
                                        option 1500
                                        
                                    small(style="color: red;")   
                            div.form-row(style="margin-bottom:-10px;")

                                div.col.form-group
                                    center
                                        button.btn.btn-danger.btn-lg(type="submit") Submit
        script(src="register.js")                 
        

                            


                        